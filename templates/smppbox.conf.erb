
# bearerbox (upstream) master config
include = "/app/kannel-<%= customer %>/etc/box.conf"

# main smppbox config
group = smppbox
#admin-deny-ip = "*.*.*.*"
admin-allow-ip = "*.*.*.*"
admin-port = <%= smpp_admin_port %>
admin-password = <%= smpp_admin_pwd %>
status-password = <%= smpp_admin_pwd %>
default-smsc = "forwarder_01"
bearerbox-host = 127.0.0.1
bearerbox-dcs = utf-8
# port for incoming SMSC connections
smppbox-port = <%= smppbox_port %>
# only works with SSL if this is true, requires valid certs
smppbox-port-ssl = <%= smppbox_ssl %>
ssl-server-cert-file = "/app/kannel-<%= customer %>/etc/wildcard.dev1.whispir.net.crt"
ssl-server-key-file = "/app/kannel-<%= customer %>/etc/wildcard.dev1.whispir.net.clear.pem"
system-id = "<%= smpp_systemid %>"
access-log-format = "%l [SMSC:%i] [SVC:%n][ACT:%A] [BINF:%B][from:%p] [to:%P][flags:%m:%c:%M:%C:%d][msg:%L **REDACTED**] [udh:%U:%u]"
log-file = "/app/kannel-<%= customer %>/log/smppbox_server.log"
log-level = 1
access-log = "/app/kannel-<%= customer %>/log/smppbox_access.log"
store-type = spool
store-location = "/app/kannel-<%= customer %>/var/smppbox"

# license for smppbox
group = license
public-key = /app/kannel-<%= customer %>/var/license_public.pem
license-key = /app/kannel-<%= customer %>/var/smppbox.licenseV2
license-version = 2
username = whispir
password = SMPPb0xvv1561

# user directory include
include = "/app/kannel-<%= customer %>/etc/users.d/"